<nav
  class="sticky top-0 py-4 px-6 md:px-6 lg:px-16 border-b border-b-gray-300 backdrop-blur flex items-center"
>
  <div>
    <button
      id="theme-toggle"
      class="bg-gray-300 dark:bg-gray-700 text-gray-800 dark:text-gray-200 py-2 px-4 rounded-md"
    >
      Change theme
    </button>

    <a href="/es" class="px-4 py-2">Espa√±ol</a>
    <a href="/en" class="px-4 py-2">English</a>
    
  </div>
</nav>

<style>
  .backdrop-blur {
    backdrop-filter: blur(10px);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const themeToggle = document.getElementById("theme-toggle");
    const html = document.documentElement;

    if (themeToggle) {
      themeToggle.addEventListener("click", () => {
        if (html.classList.contains("dark")) {
          html.classList.remove("dark");
          html.classList.add("light");
        } else {
          html.classList.remove("light");
          html.classList.add("dark");
        }
      });
    }
  });
</script>
