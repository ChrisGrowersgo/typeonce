---
import Layout from "../layouts/Layout.astro";
---

<Layout title="prueba">
  <body
    class=""
  >
    <div class="min-h-screen flex flex-col items-center justify-center 
     bg-white text-black dark:bg-gray-900 dark:text-white transition-colors duration-300">
      <h1 class="text-3xl font-bold mb-4">Modo Oscuro/Claro con Tailwind</h1>
      <p class="mb-6">
        Haz clic en el botón para cambiar entre modo claro y oscuro.
      </p>

      <!-- Botón para cambiar entre modo oscuro y claro -->
      <button
        id="theme-toggle"
        class="bg-gray-300 dark:bg-gray-700 text-gray-800 dark:text-gray-200 py-2 px-4 rounded-md"
      >
        Cambiar Tema
      </button>
    </div>

    <script>
      const themeToggle = document.getElementById("theme-toggle");
      const html = document.documentElement;

      // Cargar tema previamente guardado en localStorage
      const savedTheme = localStorage.getItem("theme");
      if (savedTheme) {
        html.classList.add(savedTheme);
      }

      // Alternar el modo y guardar la preferencia en localStorage
      if (themeToggle) {
        themeToggle.addEventListener("click", () => {
          if (html.classList.contains("dark")) {
            html.classList.remove("dark");
            localStorage.setItem("theme", ""); // Guardar como modo claro
          } else {
            html.classList.add("dark");
            localStorage.setItem("theme", "dark"); // Guardar como modo oscuro
          }
        });
      }
    </script>
  </body>
</Layout>
